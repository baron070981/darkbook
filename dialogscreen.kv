

<ContentDialog>:
    contentdialog:contentdialog.__self__
    id:contentdialog
    orientation: "vertical"
    spacing:15
    pos_hint: {'center_x': .5, 'center_y': .5}
    #size_hint_y:(1.0,1.0)
    height: "220dp"
    #md_bg_color:(1,0,0,1)
    MDRoundFlatButton:
        size_hint:(1,0.3)
        text: "удалить"
        padding:5
        on_press:
            app.root.ids.period.deletedata()
            app.root.current = 'generaldata'
            
        
    MDRoundFlatButton:
        text: "изменить"
        size_hint:(1,0.3)
        on_release:
            app.root.ids.period.dialog_close()
            
        
    MDRoundFlatButton:
        text: "отмена"
        size_hint:(1,0.3)
        on_release:
            app.root.ids.period.dialog_close()


