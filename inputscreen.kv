

<InputScreen>:
    name:"input screen"
    user_input:user_input
    
    BoxLayout:
        orientation: 'vertical'
        padding: 2
        spacing: 3
        
        FloatLayout:
            #padding:2
            size_hint:(1,0.7)
            canvas:
                Color:
                    rgba:.04,.04,.04,1
                Rectangle:
                    pos:self.pos
                    size:self.size
            Label:
                id:winfo
                size_hint:(0.7,0.1)
                pos_hint:{'y':0,'x':0.15}
                text:root.welcomeinfo
                color:1,.1,.1,1
                font_size:'12sp'
        
        BoxLayout:
            orientation:'horizontal'
            size_hint:(1,0.1)
            canvas:
                Color:
                    rgba:.04,.04,.04,1
                Rectangle:
                    pos:self.pos
                    size:self.size
            TextInput:
                id:user_input
                size_hint:(0.7,0.9)
                pos_hint:{'y':0.1,'x':0.1}
                font_size: "14sp"
                multiline:False
                color:1,.3,.3,.5
                foreground_color:(1,.1,.1,1)
                halign:"center"
                background_color:(.1,.1,.1,1)
                border:(2,2,2,2)
                password: True
            Button:
                text:'GO'
                font_size:'12sp'
                size_hint:(0.1,0.87)
                pos_hint:{'x':0.8,'y':0.1}
                on_press:
                    app.root.current = 'datalist'
        
        FloatLayout:
            size_hint:(1,0.7)
            canvas:
                Color:
                    rgba:.04,.04,.04,1
                Rectangle:
                    pos:self.pos
                    size:self.size
            Label:
                id:info
                size_hint:(0.7,0.1)
                pos_hint:{'y':0.7,'x':0.15}
                text:root.info
                color:1,.1,.1,1
                font_size:'12sp'




