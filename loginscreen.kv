
#: import MDLabel kivymd.uix.label 
#:import MDTextField kivymd.uix.textfield


<LoginScreen>:
    name:"loginscreen"
    inputpassword:inputpassword
    
    BoxLayout:
        orientation: 'vertical'
        #inputpassword:inputpassword
        padding: 2
        spacing: 3
        canvas:
            Color:
                rgba:.04,.04,.04,1
            Rectangle:
                pos:self.pos
                size:self.size

        FloatLayout:
            #padding:2
            size_hint:(1,0.7)
            canvas:
                Color:
                    rgba:.04,.04,.04,1
                Rectangle:
                    pos:self.pos
                    size:self.size
            MDLabel:
                id:welcomelabel
                halign:'center'
                size_hint:(1,0.17)
                pos_hint:{'y':0.1,'x':0}
                text:root.welcome
                color:1,.1,.1,1
                font_size:'12sp'
                font_style:'Subtitle2'
        
        BoxLayout:
            orientation:'horizontal'
            size_hint:(1,0.1)
            padding:(8,0,8,0)
            spacing:8
            canvas:
                Color:
                    rgba:.04,.04,.04,1
                Rectangle:
                    pos:self.pos
                    size:self.size
            MDTextFieldRect:
                id:inputpassword
                size_hint:(0.7,0.9)
                pos_hint:{'y':0.1,'x':0.1}
                font_size: "14sp"
                multiline:False
                color:1,.3,.3,.5
                foreground_color:(.1,.1,1,1)
                halign:"center"
                background_color:(.1,.1,.1,1)
                border:(2,2,2,2)
                password: True
            
            MDIconButton:
                icon:'images/inapp.png'
                id:btnexit
                user_font_size: "14sp"
                pos_hint:{'y':0.1}
                on_press:
                    root.check_password()
        
        FloatLayout:
            size_hint:(1,0.7)
            canvas:
                Color:
                    rgba:.04,.04,.04,1
                Rectangle:
                    pos:self.pos
                    size:self.size
            MDLabel:
                id:errorlabel
                size_hint:(0.7,0.1)
                pos_hint:{'y':0.7,'x':0.15}
                text:root.errorstring
                color:1,.1,.1,1
                font_size:'12sp'
                halign:'center'
                font_style:'Subtitle2'





